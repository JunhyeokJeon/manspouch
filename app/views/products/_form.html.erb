<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-flex justify-content-start new-form-line">
    <div class="field">
      <%= f.label :category %>
      <%= f.select(:category, ['피부', '화장', '헤어', '바디'] , {}, { :class => 'form-control input-select'}) %>
    </div>
    <div class="field" style="margin-left: 20px;">
      <%= f.label :brand %>
      <%= f.text_field(:brand, class: 'form-control input-text', style:"width:200px;") %>
    </div>
    <div class="field" style="margin-left: 20px;">
      <%= f.label :price  %>
      <%= f.number_field(:price, class: 'form-control input-text', style:"width:200px;") %>
    </div>
  </div>

  <div class="d-flex justify-content-start new-form-line">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field(:name , class: 'form-control input-text', style: "width:550px;")%>
    </div>
    <br>
    <div class="field" style="margin-left:30px;">
      <p style="margin-top:0">썸네일 이미지 </p>
      <p style="margin-top:15px;"><%= f.file_field :image %></p>
    </div>
  </div>

  <div class="field new-form-line">
      <%= f.cktext_area :contents %>
  </div>

  <div class="d-flex justify-content-start new-form-line" style="margin: 10px 0">
    <div class="field">
      <%= f.label "직업" %>
      <%= f.select( :job,  ['대학생', '고등학생', '영업직', '비즈니스맨'], {}, { :class => 'form-control input-select'}) %>
    </div>
    <div class="field" style="margin-left:20px;">
      <%= f.label "연령대" %>
      <%= f.select( :age, ['10대', '20대초반', '20대후반', '30대초반', '30대후반', '40대이상'],  {}, { :class => 'form-control input-select'}) %>
    </div>
  </div>

  <h3>사용자 유형</h3>
  <div class="d-flex justify-content-start new-form-line" style="margin: 10px 0;">
    <div class="field">
      <%= f.label "피부 기초 케어형" %>
      <%= f.check_box :basecare, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "피부 심화 케어형" %>
      <%= f.check_box :hardcare, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "적극적 화장형" %>
      <%= f.check_box :beautyman, class: "spec-detail" %>
    </div>
  </div>

  <h3>피부 타입 점수</h3>
  <div class="d-flex justify-content-start new-form-line" style="margin: 10px 0;">
    <div class="field">
      <%= f.label "건성" %>
      <%= f.number_field :dry, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "일반피부" %>
      <%= f.number_field :normal, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "지성" %>
      <%= f.number_field :oily, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "복합성" %>
      <%= f.number_field :complex, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "민감성" %>
      <%= f.number_field :sensitive, class: "spec-detail" %>
    </div>
  </div>


  <h3>피부 타입</h3>
  <div class="d-flex justify-content-start new-form-line" style="margin: 10px 0;">
    <div class="field">
      <%= f.label "건성" %>
      <%= f.check_box :dryb, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "일반피부" %>
      <%= f.check_box :normalb, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "지성" %>
      <%= f.check_box :oilyb, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "복합성" %>
      <%= f.check_box :complexb, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "민감성" %>
      <%= f.check_box :sensitiveb, class: "spec-detail" %>
    </div>
  </div>

  <h3>피부 특성</h3>
  <div class="d-flex justify-content-start new-form-line" style="margin: 10px 0;">
    <div class="field">
      <%= f.label "주름이 있는 편이다." %>
      <%= f.check_box :wrinkle, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "피지분비가 많다." %>
      <%= f.check_box :sebum, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "잡티가 많다." %>
      <%= f.check_box :stain, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "모공이 확장되어 있다." %>
      <%= f.check_box :bigpore, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "탄력이 부족하다/없다." %>
      <%= f.check_box :down, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "아토피가 있다." %>
      <%= f.check_box :atopy, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "여드름이 많다." %>
      <%= f.check_box :pimple, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "피부가 건조하다." %>
      <%= f.check_box :skindry, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "뾰루지가 자주 난다." %>
      <%= f.check_box :eruption, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "각질이 많다." %>
      <%= f.check_box :deadcell, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "기미가 많다." %>
      <%= f.check_box :freckle, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "다크써클이 심하다." %>
      <%= f.check_box :dark, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "안면홍조가 있다." %>
      <%= f.check_box :red, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "검버섯이 있다." %>
      <%= f.check_box :agespot, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "피부가 얇은 편이다." %>
      <%= f.check_box :thin, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "안면이 자주 붓는다." %>
      <%= f.check_box :swell, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label "점이 많다." %>
      <%= f.check_box :dot, class: "spec-detail" %>
    </div>
  </div>

  <div align="center">
    <div class="actions" style="margin: 20px 0px;">
      <%= f.submit "작성", class:"btn btn-secondary", style:"margin-right: 10px;" %>
      <%= link_to '취소', products_path, class:"btn btn-secondary", style:"margin-left: 10px;" %>
    </div>
  </div>
<% end %>
